@model Models.Customer
@{
    ViewData["Title"] = "Create new customer";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create new customer</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Create Customer</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="@Url.Action("CreateCustomer")" method="post">
                        <div class="card-body">
                            @*@if (ViewBag.Error!=null)
                            {
                                <p class="alert alert-danger">@ViewBag.Error</p>
                            }*@
                            <div class="row">
                                <div class="col-6">
                                    <label for="exampleInputEmail1">First Name</label>
                                    <input type="text" name="FirstName" class="form-control" value="@Model.FirstName">
                                    @Html.ValidationMessageFor(model => model.FirstName, string.Empty, new { @class = "text-danger" })
                                </div>
                                <div class="col-6">
                                    <label for="exampleInputEmail1">Last Name</label>
                                    <input type="text" name="LastName" class="form-control" value="@Model.LastName">
                                    @Html.ValidationMessageFor(model => model.LastName, string.Empty, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label for="exampleInputEmail1">Email</label>
                                    <input type="text" name="Email" class="form-control" value="@Model.Email" readonly="@(!string.IsNullOrEmpty(Model.Email))">
                                    @Html.ValidationMessageFor(model => model.Email, string.Empty, new { @class = "text-danger" })
                                </div>
                                <div class="col-6">
                                    <label for="exampleInputEmail1">Phone</label>
                                    <input type="text" name="Phone" class="form-control" value="@Model.Phone">
                                    @Html.ValidationMessageFor(model => model.Phone, string.Empty, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <label for="exampleInputEmail1">Survey</label>
                                    <select class="form-control" name="SurveyId" id="type" asp-for=SurveyId asp-items="@ViewData["surveys"] as List<SelectListItem>">
                                    </select>
                                    @Html.ValidationMessageFor(model => model.SurveyId, string.Empty, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button asp-action="GetAllCustomers" class="btn btn-warning">Back to list</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->

            </div>
        </div>
    </div>
</section>